        <header class="wrapper clearfix">
            <a href="/"><h1 class="logo">Grabinero</h1></a>
            <% if session[:dwolla_token] != nil then %>
            <div class="auth">Hi, <%= session[:name] %>! <form action='/logout' method='GET'><button>Log Out</button></form></div>
            <% else %>
            <div class="auth"><form action='/login' method='GET'><button>Log in with Dwolla</button></form></div>
            <% end %>
            <nav>
                <ul>
                    <li><a href="#" onclick="return false;" class="askopen">While you're out?</a></li>
                    <li><a href="#" onclick="return false;" class="solicitopen">I'm going out!</a></li>
                </ul>
            </nav>
            <form action="/ask" method="POST" class="dropdown askform">
                <p>I want</p>
                <input type="text" name="description" placeholder="(something)">
                <p class="optional">from</p>
                <input type="text" name="location" placeholder="(place, optional)" class="optional">
                <button type="submit">Please!</button>
            </form>
            <form action="/solicit" method="POST" class="dropdown solicitform">
                <p>I'm going to</p>
                <input type="text" name="destination" placeholder="(place)">
                <p class="optional">in</p>
                <input type="text" name="time" placeholder="(time)" class="optional">
                <button type="submit">Who needs?</button>
            </form>
        </header>
        <article class="main wrapper clearfix">

        <%=  yield %>

        </article>

        <footer class="wrapper">
